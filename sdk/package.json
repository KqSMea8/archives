{
  "name": "makestack",
  "version": "0.0.1",
  "description": "MakeStack SDK with CLI Developer Tools.",
  "main": "dist/index.js",
  "bin": {
    "makestack": "bin/makestack"
  },
  "scripts": {
    "cov": "istanbul cover _mocha",
    "test": "mocha",
    "test:live": "mocha -w",
    "pretest": "tsc --pretty",
    "prepack": "npm run build-runtime && npm run build-supervisor && npm run build",
    "build-runtime": "rm -rf runtime && mkdir -p runtime && cd ../runtime && yarn pack && cd ../sdk && tar xf ../runtime/makestack-runtime-*.tgz -C runtime --strip-components=1",
    "build-supervisor": "rm -rf supervisor && mkdir -p supervisor && cd ../supervisor && yarn pack && cd ../sdk && tar xf ../supervisor/makestack-supervisor-*.tgz -C supervisor --strip-components=1",
    "build": "tsc --pretty",
    "build:live": "tsc --pretty -w"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/seiyanuta/makestack.git"
  },
  "author": "Seiya Nuta <nuta@seiya.me>",
  "license": "SEE LICENSE IN LICENSE.md",
  "bugs": {
    "url": "https://github.com/seiyanuta/makestack/issues"
  },
  "homepage": "http://makestack.org",
  "dependencies": {
    "caporal": "^0.7.0",
    "chalk": "^2.1.0",
    "drivelist": "^5.2.4",
    "etcher-image-write": "^9.1.3",
    "express": "^4.16.2",
    "form-data": "^2.3.1",
    "http-proxy-middleware": "^0.17.4",
    "inquirer": "^3.2.3",
    "js-yaml": "^3.10.0",
    "jszip": "^3.1.4",
    "mountutils": "^1.2.2",
    "node-fetch": "^1.7.3",
    "node-ipc": "^9.1.1",
    "nunjucks": "^3.0.1",
    "shell-quote": "^1.6.1",
    "sudo-prompt": "^7.1.1",
    "winston": "next"
  },
  "devDependencies": {
    "@types/mocha": "^2.2.44",
    "@types/node": "^8.0.53",
    "istanbul": "next",
    "mocha": "^4.0.1",
    "nock": "^9.0.27",
    "power-assert": "^1.4.4",
    "source-map-support": "^0.5.0",
    "supervisor": "^0.12.0",
    "ts-node": "^3.3.0",
    "typescript": "^2.6.2"
  }
}
