root = true

[*]
end_of_line = lf
insert_final_newline = true

[*.ts]
indent_style = space
indent_size = 4

[*.rb]
indent_style = space
indent_size = 2

[*.js]
indent_style = space
indent_size = 2

[*.json]
indent_style = space
indent_size = 2

[{*.c,*.cpp}]
indent_style = space
indent_size = 4

[{*.yml,*.yaml}]
indent_style = space
indent_size = 2

[{*.vue,*.css,*.scss}]
indent_style = space
indent_size = 2

[{*.html,*.ejs}]
indent_style = space
indent_size = 2

[{Makefile,*.mk}]
indent_style = tab
