{
  "name": "makestack.org",
  "private": true,
  "hexo": {
    "version": "3.4.4"
  },
  "scripts": {
    "dev": "hexo server",
    "build:live": "supervisor -n exit -w themes,../Documentation -e 'html,md' -x yarn prebuild",
    "prebuild": "rm -rf source && mkdir -p source && cp -r ../Documentation source/documentation && echo \"index: true\n---\" > source/index.md",
    "build": "hexo generate",
    "deploy": "npm run build && hexo deploy"
  },
  "dependencies": {
    "hexo": "^3.4.4",
    "hexo-deployer-git": "^0.3.1",
    "hexo-generator-archive": "^0.1.4",
    "hexo-generator-category": "^0.1.3",
    "hexo-generator-index": "^0.2.0",
    "hexo-generator-tag": "^0.2.0",
    "hexo-renderer-ejs": "^0.3.0",
    "hexo-renderer-marked": "^0.3.0",
    "hexo-renderer-stylus": "^0.3.1",
    "hexo-server": "^0.3.0",
    "supervisor": "^0.12.0"
  }
}