/bin/node {
  /bin/node mr,
  
  /dev/null rw,
  /dev/zero rw,
  /dev/random  r,
  /dev/urandom r,
  /lib/**      r,
  /lib/*.so*   mr,
  /lib64/**    r,
  /lib64/*.so* mr,

  /sys/class/gpio/** rw,
  /dev/i2c*    rw,
  /dev/spidev* rw,

  /etc/hosts   r,
  network inet  stream,
  network inet6 stream,
  network inet  dgram,
  network inet6 dgram,

  /app           r,
  /disk/data/*   rw,
}
