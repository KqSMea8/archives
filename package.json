{
  "name": "supershow",
  "version": "0.0.1",
  "description": "A handy markdown presentation tool.",
  "bin": {
    "supershow": "supershow"
  },
  "main": "dist/index.js",
  "repository": "https://github.com/seiyanuta/supershow",
  "author": "Seiya Nuta <nuta@seiya.me>",
  "license": "CC0-1.0 OR MIT",
  "scripts": {
    "prepack": "npm run build",
    "build": "tsc && WEBPACK_MODE=production webpack",
    "dev": "tsc -w",
    "ui": "WEBPACK_MODE=development webpack-dev-server --hot",
    "test": "mocha",
    "coverage": "nyc mocha",
    "test:live": "mocha --watch --watch-extensions ts",
    "docs": "docsify serve docs/docs",
    "lint": "tslint --project tsconfig.json",
    "lint-fix": "tslint --fix --project tsconfig.json"
  },
  "dependencies": {
    "@iktakahiro/markdown-it-katex": "^3.0.3",
    "caporal": "^0.10.0",
    "chalk": "^2.4.1",
    "express": "^4.16.3",
    "highlight.js": "^9.12.0",
    "js-yaml": "^3.12.0",
    "markdown-it": "^8.4.1",
    "markdown-it-cjk-breaks": "^1.1.0",
    "markdown-it-emoji": "^1.4.0",
    "markdown-it-footnote": "^3.0.1",
    "twemoji": "^11.0.0",
    "ws": "^5.2.1"
  },
  "devDependencies": {
    "@fortawesome/fontawesome-free-webfonts": "^1.0.9",
    "@types/chalk": "^2.2.0",
    "@types/express": "^4.16.0",
    "@types/highlight.js": "^9.12.3",
    "@types/js-yaml": "^3.11.2",
    "@types/markdown-it": "^0.0.4",
    "@types/mocha": "^5.2.3",
    "@types/node": "^10.5.1",
    "@types/sinon": "^5.0.1",
    "@types/ws": "^5.1.2",
    "autoprefixer": "^8.6.4",
    "css-loader": "^0.28.11",
    "cssnano": "^3.10.0",
    "file-loader": "^1.1.11",
    "html-webpack-plugin": "^3.2.0",
    "mocha": "^5.2.0",
    "node-sass": "^4.9.0",
    "nyc": "^12.0.2",
    "postcss-loader": "^2.1.5",
    "raw-loader": "^0.5.1",
    "sass-loader": "^7.0.3",
    "sinon": "^6.0.1",
    "style-loader": "^0.21.0",
    "ts-node": "^7.0.0",
    "tslint": "^5.10.0",
    "typescript": "^2.9.2",
    "vue": "^2.5.16",
    "vue-loader": "^15.2.4",
    "vue-style-loader": "^4.1.0",
    "vue-template-compiler": "^2.5.16",
    "webpack": "^4.13.0",
    "webpack-cli": "^3.0.8",
    "webpack-dev-server": "^3.1.4"
  },
  "files": [
    "dist",
    "lib",
    "supershow"
  ],
  "nyc": {
    "extension": [
      ".ts"
    ],
    "include": [
      "lib/**/*"
    ],
    "reporter": [
      "text",
      "html"
    ],
    "sourceMap": true,
    "all": true
  }
}
