{
  "name": "@makestack/runtime",
  "version": "0.1.1",
  "license": "(CC0-1.0 OR MIT)",
  "description": "MakeStack Node.js app runtime environment.",
  "gypfile": true,
  "main": "./dist/index.js",
  "typings": "./dist/index.d.ts",
  "scripts": {
    "cov": "istanbul cover _mocha",
    "test": "mocha",
    "test:live": "mocha -w",
    "prepare": "npm run build",
    "build": "npm run transpile",
    "build-native": "yarn node-gyp rebuild --arch $ARCH && mkdir -p native/$ARCH && mv build/Release/*.node native/$ARCH",
    "transpile": "tsc",
    "build:live": "tsc -w"
  },
  "dependencies": {
    "node-gyp": "^3.6.2",
    "nan": "^2.8.0"
  },
  "devDependencies": {
    "@types/chai": "^4.0.6",
    "@types/mocha": "^2.2.44",
    "@types/mock-fs": "^3.6.30",
    "@types/node": "^8.0.53",
    "@types/sinon": "^4.0.0",
    "chai": "^4.1.2",
    "istanbul": "^1.1.0-alpha.1",
    "mocha": "^4.0.1",
    "mock-fs": "^4.4.2",
    "nan": "^2.8.0",
    "sinon": "^4.1.2",
    "source-map-support": "^0.5.0",
    "ts-node": "^3.3.0",
    "typescript": "^2.6.2"
  }
}
